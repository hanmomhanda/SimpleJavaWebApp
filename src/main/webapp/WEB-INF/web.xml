<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Simple Login Web Application</display-name>

    <filter>
        <filter-name>UTF8EncodingFilter</filter-name>
        <filter-class>filter.UTF8EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTF8EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>setup.ApplicationStartUpListener</listener-class>
    </listener>

</web-app>
